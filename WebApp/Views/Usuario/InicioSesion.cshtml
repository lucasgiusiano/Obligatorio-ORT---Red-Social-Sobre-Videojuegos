@{
	string opacidad = string.Empty;
}

@if (String.IsNullOrEmpty(ViewBag.msg))
{
	opacidad = "0";
}
else
{
	opacidad = "100";
}

@if (!String.IsNullOrEmpty(ViewBag.msg))
{
	<div class="alert alert-danger text-center opacity-@opacidad position-absolute" style="z-index: 9999; top: 100px; left: 0; right: 0; margin: 0 auto; width: 500px; transition: .5s; transition-delay: 1.0s" role="alert">
		@ViewBag.msg
	</div>
}

<div class="d-flex justify-content-center align-items-center w-100 inicioSesion">
	<form method="post" class="col-4 d-flex row align-content-around">
		<h2 class="text-center">Inicie Sesion</h2>
		<hr></hr>
		<div class="form-group">
			<label for="correo">Correo*</label>
			<input name="email" type="email" class="form-control" id="correo" placeholder="alguien@correo.com" required>
		</div>
		<div class="form-group">
			<label for="nombre">Contraseña*</label>
			<input name="password" type="password" class="form-control" id="nombre" placeholder="*********" required>
		</div>
		<div class="form-group d-flex column justify-content-between">
			<input type="submit" class="btn btn-registro mt-3" value="Iniciar Sesion"><a class="btn btn-registro mt-3" href="@Url.Action("Registro", "Usuario")">Crear una cuenta</a>
		</div>
	</form>
</div>