@model Dominio.Miembro

@if (!String.IsNullOrEmpty(ViewBag.msg))
{

	<div class="alert alert-danger position-absolute d-flex column justify-content-around" style="z-index: 9999; top: 100px; left: 0; right: 0; margin: 0 auto; width: 800px; transition: .5s; transition-delay: .5s" role="alert">
		@ViewBag.msg
		<button type="button" class="btn" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true"><i class="fa-solid fa-circle-xmark fa-2xl" style="color: #1e2e35;"></i></span>
		</button>
	</div>
}


<div id="registro" class="d-flex justify-content-between pt-4">
	<form method="post" class="col-4 d-flex row align-content-around">
		<h2>Registrate </h2>
		<p>Tu aventura comienza aquí. ¡Regístrate ya!</p>
		<hr>
		<div class="form-group">
			<label for="nombre">Nombre*</label>
			<input asp-for="Nombre" class="form-control" id="nombre" placeholder="Lucas" required>
		</div>
		<div class="form-group">
			<label for="apellido">Apellido*</label>
			<input asp-for="Apellido" class="form-control" id="apellido" placeholder="Giusiano" required>
		</div>
		<div class="form-group">
			<label for="fechaNac">Fecha de Nacimiento*</label>
			<input asp-for="FechaNac" type="date" class="form-control" id="fechaNac" required>
		</div>
		<div class="form-group">
			<label for="correo">Correo*</label>
			<input asp-for="Email" class="form-control" id="correo" placeholder="alguien@correo.com" required>
		</div>
		<div class="form-group">
			<label for="contrasenia">Contraseña*</label>
			<input asp-for="Contrasenia" type="password" class="form-control" id="contrasenia" placeholder="MiContra123" required>
		</div>
		<div class="form-group d-flex column justify-content-between">
			<input type="submit" class="btn btn-registro mt-3" value="Registrarse"><a class="btn btn-registro mt-3" href="@Url.Action("InicioSesion","Usuario")">Tengo una cuenta</a>
		</div>
	</form>

	<div id="carouselExampleSlidesOnly" class="carousel slide col-8" data-ride="carousel" data-interval="2000">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img class="d-block w-100" src="/images/carrusel1.png" alt="First slide">
			</div>
			<div class="carousel-item">
				<img class="d-block w-100" src="/images/carrusel2.png" alt="Second slide">
			</div>
			<div class="carousel-item">
				<img class="d-block w-100" src="/images/carrusel3.png" alt="Third slide">
			</div>
		</div>
	</div>
</div>

<div class="alert alert-danger d-none" role="alert" >
	This is a danger alert—check it out!
</div>
